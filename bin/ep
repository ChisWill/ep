#!/usr/bin/env php
<?php

declare(strict_types=1);

use Ep\Console\Application;
use Ep\Console\Input;

(static function (): void {
    $cwd = getcwd();

    if (file_exists($cwd . '/ep.json')) {
        $options = json_decode(file_get_contents($cwd . '/ep.json'), true);
    } else {
        $message = "Could not find a ep.json file in {$cwd}" . PHP_EOL;
        fwrite(STDERR, $message);
        exit(1);
    }

    require($options['bootstrap'] ?? 'vendor/autoload.php');
    unset($options['bootstrap']);

    $container = Ep::init(realpath($options['rootPath'] ?? './'));
    unset($options['rootPath']);

    $config = Ep::getConfig();
    $options['common'] ??= [];
    $options['common']['userRootNamespace'] = $config->rootNamespace;

    $config->rootNamespace = 'Ep';
    $config->commandSuffix = 'Command';
    $config->actionSuffix = 'Action';
    $config->defaultAction = 'index';

    $input = $container->get(Input::class);
    foreach ($options as $name => $value) {
        $input->setOption($name, $value);
    }

    $exitCode = $container
        ->get(Application::class)
        ->run($input);

    exit($exitCode);
})();
